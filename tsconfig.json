{
  "compilerOptions": {
    "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
          "skipLibCheck": true,
            "strict": true,
              "noImplicitAny": true,
                "noEmit": true,
                  "module": "ESNext",
                    "moduleResolution": "bundler",
                      "resolveJsonModule": true,
                        "isolatedModules": true,
                          "jsx": "preserve",
                            "incremental": true,
                              "baseUrl": ".",
                                "paths": {
      "@/*": ["src/*"]
    },
    "types": ["@cloudflare/workers-types", "next"],
      "esModuleInterop": true,
        "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
    "exclude": ["node_modules", ".next"]
}
